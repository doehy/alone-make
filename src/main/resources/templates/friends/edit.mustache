{{>layouts/header}}

{{#member}}
    <form class="container" action="/friends/update" method="post">
        <input name="id" type="hidden" value="{{id}}" />
        <div class="mb-3">
            <label class="form-label">name</label>
            <input type="text" class="form-control" name="name" value="{{name}}">
        </div>
        <div class="mb-3">
            <label class="form-label">major</label>
            <input class="form-control" rows="3" name="major" value="{{major}}">
        </div>
        <div class="mb-3">
            <label class="form-label">mbti</label>
            <input class="form-control" rows="3" name="mbti" value="{{mbti}}">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/friends/{{id}}">Back</a>
    </form>
{{/member}}
{{>layouts/footer}}